<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.views.MainMenu">
   <children>
      <HBox VBox.vgrow="ALWAYS">
         <children>
            <VBox alignment="TOP_CENTER" minWidth="200.0" prefWidth="200.0" spacing="6.0" styleClass="menu">
               <children>
                  <Button fx:id="stats" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#statsPressed" style="-fx-alignment: center_left;" styleClass="menu-button" text="Statistiques" />
                  <Button fx:id="reservations" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#reservationsPressed" style="-fx-alignment: center_left;" styleClass="menu-button" text="Reservations" />
                  <Button fx:id="chambres" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#chambresPressed" style="-fx-alignment: center_left;" styleClass="menu-button" text="Chambres" />
                  <Button fx:id="clients" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#clientsPressed" style="-fx-alignment: center_left;" styleClass="menu-button" text="Clients" />
                  <Button fx:id="comptes" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#comptesPressed" style="-fx-alignment: center_left;" styleClass="menu-button" text="Comptes" />
                  <AnchorPane VBox.vgrow="ALWAYS" />
                  <Button fx:id="logout" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#logOutPressed" styleClass="log-out-button" text="Logout" />
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <padding>
                  <Insets bottom="24.0" left="9.0" right="9.0" top="24.0" />
               </padding>
            </VBox>
            <AnchorPane fx:id="contentContainer" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
               <children>
                  <Label alignment="CENTER" text="Selectionnez une option du menu..." AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
               </children>
            </AnchorPane>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
